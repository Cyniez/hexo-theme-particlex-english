<%
let posts = page.posts
%>
<div id="archives">
    <% if (theme.search.enable) { %>
        <input id="search-bar" class="input" placeholder="搜索" v-model="rawSearch"/>
    <% } %>
    <div id="timeline-wrap" ref="timeline">
        <% let monthly = config.archive_generator.enabled && config.archive_generator.monthly && page.month %>
        <% let daily = config.archive_generator.enabled && config.archive_generator.daily && page.day %>
        <% let currentDate %>
        <% posts.forEach((post, id) => { %>
            <% if (daily) { %>
                <% if (currentDate !== date(post.date, "YYYY-M-D dddd")) { %>
                    <% currentDate = date(post.date, "YYYY-M-D dddd") %>
                    <div class="timeline-date"><%= currentDate %></div>
                <% } %>
            <% } else if (monthly) { %>
                <% if (currentDate !== date(post.date, "YYYY-M")) { %>
                    <% currentDate = date(post.date, "YYYY-M") %>
                    <div class="timeline-date"><%= currentDate %></div>
                <% } %>
            <% } else if (config.archive_generator.enabled) { %>
                <% if (currentDate !== date(post.date, "YYYY")) { %>
                    <% currentDate = date(post.date, "YYYY") %>
                    <div class="timeline-date"><%= currentDate %></div>
                <% } %>
            <% } %>
            <div class="timeline" data-title="<%- post.title.toLowerCase().replace(/\s+/g, "") %>">
                <div class="timeline-tail"></div>
                <div class="timeline-content">
                    <div class="item-time">
                        <% if (daily) { %>
                        <% } else if (monthly) { %><%= date(post.date, "D dddd") %>
                        <% } else if (config.archive_generator.enabled) { %><%= date(post.date, "M/D dddd") %>
                        <% } %>
                    </div>
                    <a href="<%- url_for(post.path) %>">
                        <h3><%= post.title %></h3>
                    </a>
                    <div class="info">
                        <% if (post.categories && post.categories.data.length !== 0) { %>
                            <span class="category">
                        <a href="<%- url_for(post.categories.data[0].path) %>">
                            <span class="icon">
                                <i class="fa-solid fa-bookmark fa-fw"></i>
                            </span>
                            <%= post.categories.data[0].name %>
                        </a>
                    </span>
                        <% } %>
                        <% if (post.tags && post.tags.data.length !== 0) { %>
                            <span class="tags">
                        <span class="icon">
                            <i class="fa-solid fa-tags fa-fw"></i>
                        </span>
                                <% let prev; %>
                                <% post.tags.data.forEach((tag) => { %>
                                    <span class="tag">
                                        <%
                                            const colors = theme.colors.filter((color) => color !== prev);
                                            let id = Math.floor(Math.random() * colors.length);
                                            prev = colors[id];
                                        %>
                                        <a href="<%- url_for(tag.path) %>" style="color: <%- colors[id] %>">
                                <%= tag.name %>
                            </a>
                        </span>
                                <% }); %>
                            </span>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    <%- partial("current") %>
</div>
